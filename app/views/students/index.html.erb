<p id="notice"><%= notice %></p>

<h1>Students in the Classroom</h1>

<div class="row">
  <% @students.each do |student| %>
    <div class="col-md-4">
     <div class="panel panel-default">
      <div class="panel-body">
       <h4><%= "#{student.name.capitalize} is in grade #{student.grade} and has a GPA of #{student.gpa}." %></h4>

       <%= image_tag student.avatar.url(:thumb) %>

       <div class="btn-group">
        <%= link_to 'Show', student, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_student_path(student), class: "btn btn-default" %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
       </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= link_to 'New Student', new_student_path, class: "btn btn-primary" %>
